---
import BaseLayout from "../layouts/BaseLayout.astro"
---
<BaseLayout>
    <h1>Sign In</h1>
    <p>This is a mock sign-in page. In a real implementation, you would present a login form here.</p>
    <form method="POST" action="/sign-in-submit">
        <fieldset>
            <legend>Select User</legend>
            <div class="user-selection">
                <label class="user-card">
                    <input type="radio" name="user_selection" value="john" data-testid="user-selection-john" checked required>
                    <div class="user-content">
                        <img src="https://www.loremfaces.net/48/id/2.jpg" alt="John Doe" class="user-portrait">
                        <div class="user-info">
                            <div class="user-name">John Doe</div>
                            <div class="user-email">john.doe@example.org</div>
                        </div>
                    </div>
                </label>
                <label class="user-card">
                    <input type="radio" name="user_selection" value="jane" data-testid="user-selection-jane" required>
                    <div class="user-content">
                        <img src="https://www.loremfaces.net/48/id/1.jpg" alt="Jane Smith" class="user-portrait">
                        <div class="user-info">
                            <div class="user-name">Jane Smith</div>
                            <div class="user-email">jane.smith@example.org</div>
                        </div>
                    </div>
                </label>
                <label class="user-card">
                    <input type="radio" name="user_selection" value="admin" data-testid="user-selection-admin" required>
                    <div class="user-content">
                        <img src="https://www.loremfaces.net/48/id/3.jpg" alt="Admin User" class="user-portrait">
                        <div class="user-info">
                            <div class="user-name">Admin User</div>
                            <div class="user-email">admin@example.org</div>
                        </div>
                    </div>
                </label>
            </div>
        </fieldset>
        <fieldset>
            <legend>Advanced options</legend>
            <p class="field">
                <label for="token_type">Access token type:</label>
                <select name="token_type" data-test-id="token-type-select" data-testid="token-type-select">
                    <option value="opaque">Opaque Token</option>
                    <option value="jwt">Json Web Token</option>
                </select>
            </p>
            <p class="field">
                <label for="expires_in">Access token expires in:</label>
                <select name="expires_in" data-test-id="expires-in-select" data-testid="expires-in-select">
                    <option value="60">1 minute</option>
                    <option value="3600">1 hour</option>
                    <option value="86400">1 day</option>
                    <option value="604800">1 week</option>
                    <option value="2592000">30 days</option>
                    <option value="31536000">1 year</option>
                </select>
            </p>
        </fieldset>
        <p>&nbsp;</p>
        <center>
            <button type="submit" class="btn" data-test-id="sign-in-btn" data-testid="sign-in-btn">Sign In</button>
        </center>
    </form>
</BaseLayout>